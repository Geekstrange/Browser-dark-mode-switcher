{
  "name": "深/浅色模式切换开关",
  "description": "深/浅色模式切换开关",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["switch.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "start.html",
    "default_icon": {
      "16": "/icons/16.png",
      "32": "/icons/32.png",
      "38": "/icons/38.png",
	  "64": "/icons/64.png",
      "128": "/icons/128.png",
	  "256": "/icons/256.png",
	  "512": "/icons/512.png",
	  "1024": "/icons/1024.png"
    }
  },
	"icons": {
	  "16": "/icons/16.png",
	  "32": "/icons/32.png",
	  "38": "/icons/38.png",
	  "64": "/icons/64.png",
	  "128": "/icons/128.png",
	  "256": "/icons/256.png",
	  "512": "/icons/512.png",
	  "1024": "/icons/1024.png"
	}

}